<h1>Display your Pirate here</h1>
<h1>Pirate</h1>
<div class="pirate">
<p>Name:<%= @pirate.name %></p><br>
<p>Weight:<%= @pirate.weight %>pounds</p><br>
<p>Height:<%= @pirate.height %>inches</p><br>
</div><br>

<h2>Display your first ship here</h2>
<h1>Ships</h1>
<ul>
<% @ships.each do |ship| %>
<div class="ship">
<li>Name:<%= ship.name %></li>
<li>Type:<%= ship.type %></li>
<li>Booty:<%= ship.booty %></li>
</div>
</ul><br>

<h2>Display your second ship here</h2>
<ul>
<% @ships.each do |ship| %>
<div class="ship">
<li>Name:<%= ship.name %></li>
<li>Type:<%= ship.type %></li>
<li>Booty:<%= ship.booty %></li>
</ul>
<% end %>
<h1>Student</h1>

<div class="student">
  <h3>Name: <%= @student.name %></h3><br>
  <h4>Grade: <%= @student.grade %></h4>
</div><br>

<h1>Courses</h1>
<% @courses.each do |course| %>
  <div class="course">
    <p>Name: <%= course.name %></p><br>
    <p>Topic: <%= course.topic %></p><br>
  </div><br>
<% end %>
